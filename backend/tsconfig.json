{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "types": ["node", "jest"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
  }
  